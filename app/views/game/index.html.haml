= @page_title = "My games"
- if @games.blank?
  %p You haven't played a game yet.
- else
  %table.table
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Opponent
        %th{:scope => "col"} Accepted at
        %th{:scope => "col"} Actions
    %tbody
      - @games.each_with_index do |game, index|
        %tr
          %th{:scope => "row"}= index + 1
          %td
            - if game.black_player == @current_user
              = game.white_player.username
            - else
              = game.black_player.username
          %td= game.created_at
          %td= link_to "Play", play_game_path(game), :class => "btn btn-primary"
