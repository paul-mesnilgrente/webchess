#chessboard.default-theme
  - ('a'..'h').each do |rank|
    .rank
      - (1..8).each do |file|
        - square_color = 'black'
        - if (rank.ord % 2 == 1 && file % 2 == 0) || (rank.ord % 2 == 0 && file % 2 == 1)
          - square_color = 'white'
        %square{:class => square_color, :id => "#{rank + file.to_s}"}
